<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D23A"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/border_list_item_description"
        android:id="@+id/details"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_weight="1.8"
            android:adjustViewBounds="true"
            android:id="@+id/image_ref"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="80dp"
            android:contentDescription="@string/product_photo_content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/siamese" />

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:layout_height="80dp"
            android:layout_width="1dp"/>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/text_color"
                android:textStyle="italic"
                tools:text="Product Name" />

            <TextView
                android:id="@+id/quantity_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/text_color"
                android:textStyle="italic"
                tools:text="Quantity" />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/text_color"
                android:textStyle="italic"
                tools:text="Price" />

        </LinearLayout>

        <Button
            android:layout_weight="1.2"
            android:id="@+id/sale_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#DD4561"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/new_sale_button_text"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>