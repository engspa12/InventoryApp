<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47a64a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/product_image"
                android:id="@+id/product_image"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_margin="20dp"
                tools:src="@drawable/siamese" />

            <Button
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:id="@+id/details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/product_image"
                android:layout_toEndOf="@id/product_image"
                android:textColor="@color/text_color"
                android:padding="20dp"
                android:layout_marginTop="36dp"
                tools:text="@string/change_image_button" />
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:text="@string/product_name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/product_name_hint"
                    android:inputType="textCapWords" />


                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/product_price"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/product_price_hint"
                    android:inputType="numberDecimal" />


                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/product_year_of_manufacture"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_year_manufacture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="@string/product_year_of_manufacture_hint"
                    android:inputType="number" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:background="@color/text_color"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"
                    android:text="@string/product_quantity"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:hint="@string/product_quantity_hint"
                    android:inputType="number"/>

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/product_brand"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:hint="@string/product_brand_hint"
                    android:inputType="textCapWords" />

                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/product_weight"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:textStyle="italic"
                    android:backgroundTint="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:id="@+id/product_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp"
                    android:hint="@string/product_weight_hint"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/product_type"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/product_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/product_stock_status"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/in_stock_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/section_background"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:text="@string/product_warranty"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:textStyle="italic"
                android:backgroundTint="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textColor="@color/text_color"
                android:id="@+id/product_warranty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:hint="@string/product_warranty_hint"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/increase_decrease_order__buttons_section"
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:layout_weight="1"
                android:id="@+id/quantity_plus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q_plus" />

            <Button
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/quantity_minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/q_minus" />

            <Button
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:layout_weight="4"
                android:id="@+id/order_supplier_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/order_from_supplier_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/increase_decrease_section"
            android:background="@drawable/section_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <EditText
                android:textStyle="italic"
                android:backgroundTint="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textColor="@color/text_color"
                android:id="@+id/modify_quantity_by_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="@string/modify_quantity_by_button" />

            <Button
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:layout_weight="1"
                android:id="@+id/increase_quantity_by_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/increase_text_button" />

            <Button
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:background="@drawable/border_button"
                android:layout_weight="1"
                android:id="@+id/decrease_quantity_by_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/decrease_text_button" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>